@{
}

<div class="row">
    <div class="col text-center mb-5">
        <h1 class="display-4 font-weight-bolder">Book Appointment</h1>
       
    </div>
</div>
<div class="row">
    @foreach (var item in Model)
    {

        <div class="col-4">
            <div class="card" style="width: 18rem;">
                <img src="~/images/@item.Img" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">Specialization : @item.Specialization</p>
                    <a href="/Doctor/CompleteAppointment/@item.Id " class="btn btn-primary">Book Appointment</a>
                </div>
            </div>
        </div>



    }
